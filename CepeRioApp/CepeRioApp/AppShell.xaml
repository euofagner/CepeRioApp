<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CepeRioApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CepeRioApp"
    xmlns:views="clr-namespace:CepeRioApp.Views"
    Title="CepeRioApp"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="OnBoarding"
        ContentTemplate="{DataTemplate views:OnBoardingView}"
        Route="OnBoardingView" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginView}"
        Route="LoginView" />

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:HomeView}"
            Icon="home_tab.png"
            Route="HomeView" />

        <ShellContent
            Title="Eventos"
            ContentTemplate="{DataTemplate views:EventsView}"
            Icon="events_tab.png"
            Route="EventsView" />

        <ShellContent
            Title="Atividades"
            ContentTemplate="{DataTemplate views:ActivitiesView}"
            Icon="activities2_tab.png"
            Route="ActivitiesView" />

        <ShellContent
            Title="Perfil"
            ContentTemplate="{DataTemplate views:ProfileView}"
            Icon="profile_tab.png"
            Route="ProfileView" />
    </TabBar>
</Shell>

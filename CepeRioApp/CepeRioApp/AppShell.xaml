<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CepeRioApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CepeRioApp"
    xmlns:views="clr-namespace:CepeRioApp.Views"
    Title="CepeRioApp"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="OnBoarding"
        ContentTemplate="{DataTemplate views:OnBoardingView}"
        Route="OnBoardingView" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginView}"
        Route="LoginView" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>

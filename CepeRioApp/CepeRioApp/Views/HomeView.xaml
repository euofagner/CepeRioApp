<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CepeRioApp.Views.HomeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="HomeView"
    BackgroundColor="#090909">

    <ContentPage.Resources>
        <Style x:Key="FirstBorderStyle" TargetType="Border">
            <Setter Property="BackgroundColor" Value="#111111" />
            <Setter Property="Opacity" Value="1" />
            <Setter Property="Stroke" Value="Transparent" />
            <Setter Property="StrokeShape" Value="RoundRectangle 13" />
            <Setter Property="HeightRequest" Value="100" />
        </Style>
    </ContentPage.Resources>
    
    <Grid
        Padding="35,30"
        ColumnDefinitions="*, *"
        ColumnSpacing="15"
        RowDefinitions="Auto, 215, *"
        RowSpacing="25">
        <Label
            Grid.ColumnSpan="2"
            FontAttributes="Bold"
            FontSize="35"
            HorizontalOptions="Start"
            Text="OlÃ¡, Fagner" />

        <Border
            Grid.Row="1"
            Style="{StaticResource FirstBorderStyle}"
            VerticalOptions="Start" />

        <Border
            Grid.Row="1"
            Grid.Column="1"
            HeightRequest="100"
            StrokeShape="RoundRectangle 13"
            VerticalOptions="Start" />

        <Border
            Grid.Row="1"
            HeightRequest="100"
            StrokeShape="RoundRectangle 13"
            VerticalOptions="End" />

        <Border
            Grid.Row="1"
            Grid.Column="1"
            HeightRequest="100"
            StrokeShape="RoundRectangle 13"
            VerticalOptions="End" />
    </Grid>
</ContentPage>